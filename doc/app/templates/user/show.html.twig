{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_user_view'|trans({'%id%': user.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_user_view'|trans({'%id%': user.id|default('')}) }}</h1>

    <p>
        <a href="{{ url('user_index') }}" title="{{ 'action_back_to_list'|trans }}">{{ 'action_back_to_list'|trans }}</a>
    </p>

    {% if user is defined and user|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ user.id }}</dd>
            <dt>{{ 'label_email'|trans }}</dt>
            <dd>{{ user.email }}</dd>
            <dt>{{ 'label_nick'|trans }}</dt>
            <dd>{{ user.nick }}</dd>
            {% if user.userData is defined and user.userData|length %}
                <dt>{{ 'label_name'|trans }}</dt>
                <dd>{{ user.userData.name }}</dd>
                <dt>{{ 'label_surname'|trans }}</dt>
                <dd>{{ user.userData.surname }}</dd>
                <dt>{{ 'label_birthday'|trans }}</dt>
                <dd>{{ user.userData.birthday|format_date('long') }}</dd>
            {% endif %}
        </dl>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}