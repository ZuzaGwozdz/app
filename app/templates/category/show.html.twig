{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_category_view'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_category_view'|trans({'%id%': category.id|default('')}) }}</h1>

    <p>
        <a href="{{ url('category_index') }}" title="{{ 'action_back_to_list'|trans }}">{{ 'action_back_to_list'|trans }}</a>
    </p>

    {% if category is defined and category|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ category.id }}</dd>
            <dt>{{ 'label_created_at'|trans }}</dt>
            <dd>{{ category.createdAt|format_date('long')}}</dd>
            <dt>{{ 'label_updated_at'|trans }}</dt>
            <dd>{{ category.updatedAt|format_date('long') }}</dd>
            <dt>{{ 'label_title'|trans }}</dt>
            <dd>{{ category.title }}</dd>
            <dt>{{ 'label_tapes_in_category'|trans }}</dt>
            <dd>
                {% if category.tapes is defined and category.tapes|length %}
                    {% for tape in category.tapes %}
                        <a href="{{ url('tape_show', {id: tape.id}) }}" title="{{ tape.title }}">{{ tape.title }}</a><br>
                    {% endfor %}
                {% endif %}
            </dd>
        </dl>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}