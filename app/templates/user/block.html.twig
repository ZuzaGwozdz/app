{% if user.userData.blocked == 0 %}
    {% set title = 'title_user_block' %}
    {% set action = 'action_block' %}
{% else %}
    {% set title = 'title_user_unblock' %}
    {% set action = 'action_unblock' %}
{% endif %}

{% include 'default/_form.html.twig' with {
    page_title: title,
    page_title_param: {'%id%': user.id},
    submit_label: action|trans ,
    attr: {
        action: url('user_block', {'id': user.id}),
    },
    back_to_list_path: 'user_index',
} %}