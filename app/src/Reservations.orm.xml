<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="App\Entity\Reservations" table="reservations">
    <indexes>
      <index name="IDX_4DA2392AC90C65" columns="tape_id"/>
      <index name="IDX_4DA239F675F31B" columns="author_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="comment" type="text" column="comment" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="createdAt" type="datetime" column="created_at" nullable="false"/>
    <field name="status" type="boolean" column="status" nullable="true"/>
    <many-to-one field="tape" target-entity="Tapes" fetch="LAZY">
      <join-columns>
        <join-column name="tape_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="author" target-entity="Users" fetch="LAZY">
      <join-columns>
        <join-column name="author_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
